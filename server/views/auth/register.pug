extends ../layout

block navbar
  nav.navbar.navbar-default.login-navbar

block content
  .container
    .row#register
      .main.col-md-4.col-md-offset-4
        img.logo(src='img/logo.png')
        h4
          | Create your
          span SkyTrelio
          |  account
        .alert.alert-danger.hidden.error-register
          p
        form.row.registration-form(role='form', action='/register', method='post')
          .form-group
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-envelope
              input#form-username.input-lg.form-username.form-control(type='email', name='email', placeholder='Email...')
          .form-group
            .input-group
              span.input-group-addon
                i.glyphicon.glyphicon-lock
              input#form-last-name.input-lg.form-last-name.form-control(type='password', name='password', placeholder='Password...')
          button.login.btn.btn-lg.btn-block.btn-success.ladda-button(type='submit', data-style='expand-left', tabindex=3)
            span.ladda-label Create my SkyTrelio Account
        p.navbar-text.navbar-right
          span Do you already have an account?&nbsp;
          a(href='/login') Log in here